---
layout: base
eleventyNavigation:
  key: Articles
  order: 3
pagination:
  data: collections.post
  size: 12
  alias: posts
meta:
  title: Posts archive
  description: this is where you can find all our posts.
---

<section class="font-bold">
  <div class="container">
    <h1 class="text-center mb-4">All Articles</h1>
    <ul class="list-unstyled">
      {% for post in posts %}
        <li class="article">
          <a class="" href="{{post.url}}">{{ post.data.title }}</a>
        </li>
      {% endfor %}
    </ul>

    <div class="w-100 d-flex justify-content-center gap-4 py-4">
      {% if pagination.href.previous %}
        <a href="{{pagination.href.previous}}">Previous Page</a>
      {% endif %}
      {% if pagination.href.next %}
        <a href="{{pagination.href.next}}">Next Page</a>
      {% endif %}
    </div>
  </div>
</section>